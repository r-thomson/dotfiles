# Partial .gitconfig with some tweaks and aliases

[alias]
	ff = merge --ff-only
	fixup = commit --amend --no-edit
	olog = log --oneline
	shortstat = diff --shortstat
	smerge = merge --squash
	stat = diff --stat
[core]
	pager = delta
	excludesfile = ~/.gitignore
[diff]
	algorithm = histogram
[init]
	defaultBranch = master
[pager]
	branch = false
	stash = false
	tag = false
[pull]
	ff = only
